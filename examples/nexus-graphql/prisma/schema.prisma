datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
	id Int @default(autoincrement()) @id
	email String @unique
	name String?
	posts Post[]
}

model Post {
	id Int @default(autoincrement()) @id
	authorId Int?
	content String?
	published Boolean @default(false)
	title String
	author User? @relation(fields: [authorId], references: [id])
}
